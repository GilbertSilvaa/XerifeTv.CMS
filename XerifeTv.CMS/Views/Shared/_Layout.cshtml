<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - XerifeTv.CMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/XerifeTv.CMS.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>
</head>
<body>
  <div class="container-fluid">
    <div class="row flex-nowrap">
      <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
        <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
          <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <span class="fs-5 d-none d-sm-inline text-primary fw-bold">Xerife.TV CMS</span>
          </a>
          <ul class="nav nav-pills flex-column mb-sm-auto mb-0 mt-3 align-items-center align-items-sm-start" id="menu">
            <li class="nav-item py-2">
              <a class="nav-link align-middle px-0 text-light" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-chart-simple"></i> <span class="ms-1 d-none d-sm-inline">Dashboard</span>
              </a>
            </li>
            <li class="nav-item py-2">
              <a class="nav-link px-0 align-middle text-light" asp-controller="Movies" asp-action="Index">
                <i class="fa-solid fa-film"></i> <span class="ms-1 d-none d-sm-inline">Filmes</span>
              </a>
            </li>

            <li class="nav-item py-2">
              <a class="nav-link px-0 align-middle text-light" asp-controller="Series" asp-action="Index">
                <i class="fa-solid fa-video"></i> <span class="ms-1 d-none d-sm-inline">Séries</span>
              </a>
            </li>
          </ul>
          <hr>
        </div>
      </div>
      <div class="col py-3" style="max-height:95vh; overflow:auto;">
        @RenderBody()
      </div>
    </div>
  </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/utils.js" asp-append-version="true"></script>
    <script src="~/js/env.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
