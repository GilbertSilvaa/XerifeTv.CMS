@using XerifeTv.CMS.Models.Movie.Dtos.Response;
@using XerifeTv.CMS.Models.Movie.Enums;

@{
  ViewData["Title"] = "Filmes";

  ICollection<string[]> filters = [];
  filters.Add([ESearchFilter.TITLE.ToString(), "Titulo"]);
  filters.Add([ESearchFilter.CATEGORY.ToString(), "Categoria"]);
  filters.Add([ESearchFilter.RELEASE_YEAR.ToString(), "Ano de Lançamento"]);

  var movies = (IEnumerable<GetMoviesResponseDto>)ViewData["data"]!;
}

<div class="container">
  <header>
    <div class="d-flex align-items-center justify-content-between gap-4">
      <span class="fs-3 fw-normal">Filmes</span>
      <a class="btn btn-primary" asp-controller="Movies" asp-action="Form">
        <i class="fa-solid fa-plus"></i> Cadastrar
      </a>
    </div>
    <hr />
  </header>

  <div class="row mb-3 justify-content-between">
    <a class="col-1 fs-5" role="button" asp-controller="Movies" asp-action="Index">
      <i class="fa-solid fa-rotate"></i>
    </a>

    <div class="col-5">
      <form class="input-group input-group-sm" asp-controller="Movies" asp-action="Index">
        <select class="form-select shadow-none" name="filter">
          @foreach (var filter in filters)
          {
            if (filter[0].Equals(ViewBag.Filter))
            {
              <option value="@filter[0]" selected>@filter[1]</option>
            }
            else
            {
              <option value="@filter[0]">@filter[1]</option>   
            }
          }
        </select>

        <input 
          type="text" 
          name="search" 
          class="form-control shadow-none" 
          value="@ViewBag.Search"
          required>
        <button class="btn btn-success shadow-none" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>
    </div>
  </div>

  <div class="row gap-3">
    @foreach (var movie in movies)
    {
      <div class="card col-2 pt-1">
        <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
        <div class="card-body">
          <h5 class="card-title text-nowrap overflow-hidden text-truncate">@movie.Title</h5>
          <p class="card-text">@movie.Category</p>

          <div class="d-flex gap-1">
            <a class="btn btn-sm btn-success"><i class="fa-solid fa-eye"></i></a>
            <a 
              class="btn btn-sm btn-primary" 
              asp-controller="Movies" 
              asp-action="Form" 
              asp-route-id="@movie.Id">
              <i class="fa-solid fa-pen-to-square"></i>
            </a>
          </div>
        </div>
      </div>
    }

    @if (movies?.Count() <= 0)
    {
      <p>Nenhum registro encontrado.</p>
    }
  </div>

  @if (ViewBag.TotalPages > 0)
  {
    <nav class="mt-5">
      <ul class="pagination">
        <li class="page-item @(!ViewBag.HasPrevPage ? "disabled" : "")">
          <a 
            class="page-link" 
            aria-label="Previous" 
            role="button"
            asp-controller="Movies"
            asp-action="Index"
            asp-route-currentPage="@(ViewBag.CurrentPage - 1)">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
           <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
              <a 
                class="page-link" 
                asp-controller="Movies" 
                asp-action="Index" 
                asp-route-currentPage="@i">
                @i
               </a>
           </li>  
        }

        <li class="page-item @(!ViewBag.HasNextPage ? "disabled" : "")">
          <a 
            class="page-link" 
            aria-label="Next" 
            role="button"
            asp-controller="Movies"
            asp-action="Index"
            asp-route-currentPage="@(ViewBag.CurrentPage + 1)">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  }
</div>