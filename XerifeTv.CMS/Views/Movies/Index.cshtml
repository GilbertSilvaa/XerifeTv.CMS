@using XerifeTv.CMS.Models.Movie.Dtos.Response;

@{
  ViewData["Title"] = "Filmes";

  ICollection<string[]> filters = [];
  filters.Add(["title", "Titulo"]);
  filters.Add(["category", "Categoria"]);
  filters.Add(["releaseYear", "Ano de Lançamento"]);

  var movies = (IEnumerable<GetMoviesResponseDto>)ViewData["data"]!;
}

<div class="container">
  <header>
    <div class="d-flex align-items-center justify-content-between gap-4">
      <span class="fs-3 fw-normal">Filmes</span>
      <a class="btn btn-primary" asp-controller="Movies" asp-action="Form">
        <i class="fa-solid fa-plus"></i> Cadastrar
      </a>
    </div>
    <hr />
  </header>

  <div class="row mb-3 justify-content-between">
    <a class="col-1 fs-5" role="button" asp-controller="Movies" asp-action="Index">
      <i class="fa-solid fa-rotate"></i>
    </a>

    <div class="col-5">
      <form class="input-group input-group-sm" id="search-form">
        <select class="form-select shadow-none" name="filter">
          @foreach (var filter in filters)
          {
            if (filter[0].Equals(ViewData["filter"]))
            {
              <option value="@filter[0]" selected>@filter[1]</option>
            }
            else
            {
              <option value="@filter[0]">@filter[1]</option>   
            }
          }
        </select>

        <input 
          type="text" 
          name="search" 
          class="form-control shadow-none" 
          value="@ViewData["search"]"
          required>
        <button class="btn btn-success shadow-none" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>
    </div>
  </div>

  <div class="row gap-3">
    @foreach (var movie in movies)
    {
      <div class="card col-2 pt-1">
        <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
        <div class="card-body">
          <h5 class="card-title text-nowrap overflow-hidden text-truncate">@movie.Title</h5>
          <p class="card-text">@movie.Category</p>

          <div class="d-flex gap-1">
            <a class="btn btn-sm btn-success"><i class="fa-solid fa-eye"></i></a>
            <a 
              class="btn btn-sm btn-primary" 
              asp-controller="Movies" 
              asp-action="Form" 
              asp-route-id="@movie.Id">
              <i class="fa-solid fa-pen-to-square"></i>
            </a>
          </div>
        </div>
      </div>
    }

    @if (movies?.Count() <= 0)
    {
      <p>Nenhum registro encontrado.</p>
    }
  </div>
</div>

@section scripts {
  <script defer>
    $('#search-form').submit(e => {
      e.preventDefault();

      const formData = new FormData(e.target);
      const { search, filter } = Object.fromEntries(formData.entries());

      location.href = `/Movies?${filter}=${search}`;
    });
  </script>
}
