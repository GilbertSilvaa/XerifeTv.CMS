@using XerifeTv.CMS.Modules.Common.Enums
@using XerifeTv.CMS.Modules.Integrations.Webhook.Dtos.Response
@using XerifeTv.CMS.Modules.Integrations.Webhook.Enums

@model IEnumerable<GetWebhookResponseDto>

@{
    var webhookDtoEmpty = new GetWebhookResponseDto();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    @await Html.PartialAsync("_WebhookFormModal", webhookDtoEmpty)

    <button class="btn btn-primary btn-sm shadow-sm"
            role="button"
            data-bs-toggle="modal"
            data-bs-target="#webhookFormModal-@webhookDtoEmpty.Id">
        <i class="fa-solid fa-plus"></i>
        Novo webhook
    </button>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table">
        <tr>
            <th>Nome</th>
            <th>Evento de Envio</th>
            <th>URL</th>
            <th>Método</th>
            <th>Descrição</th>
            <th class="text-end">...</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted py-4">
                    Nenhum registro encontrado.
                </td>
            </tr>
        }
        else
        {
            foreach (var webhook in Model)
            {
                <tr style="@(webhook.IsDisabled ? "opacity: 72%" : "")">
                    <td>@webhook.Name</td>

                    <td>
                        <span class="badge bg-secondary">
                            @webhook.TriggerEvent.GetDescription()
                        </span>
                    </td>

                    <td class="text-truncate" style="max-width: 250px;">
                        @webhook.Url
                    </td>

                    <td>
                        @if (webhook.HttpMethod == EHttpMethod.GET)
                        {
                            <span class="badge text-bg-primary">GET</span>
                        }
                        else if (webhook.HttpMethod == EHttpMethod.POST)
                        {
                            <span class="badge text-bg-success">POST</span>
                        }
                        else if (webhook.HttpMethod == EHttpMethod.PUT)
                        {
                            <span class="badge text-bg-warning">PUT</span>
                        }
                        else if (webhook.HttpMethod == EHttpMethod.PATCH)
                        {
                            <span class="badge text-bg-warning">PATCH</span>
                        }
                        else if (webhook.HttpMethod == EHttpMethod.DELETE)
                        {
                            <span class="badge text-bg-danger">DELETE</span>
                        }
                    </td>

                    <td class="text-truncate" style="max-width: 300px;">
                        @webhook.Description
                    </td>

                    <td class="text-end">
                        <button class="btn btn-sm btn-outline-primary shadow-sm"
                                data-bs-toggle="modal"
                                data-bs-target="#webhookFormModal-@webhook.Id"
                                title="Editar webhook">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Model.Any())
{
    foreach (var webhook in Model)
    {
        @await Html.PartialAsync("_WebhookFormModal", webhook)
    }
}